<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.SpeakersDetailDialogFragment">

    <androidx.cardview.widget.CardView
        android:elevation="1dp"
        app:cardCornerRadius="4dp"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/shape_parrafo"
            >
            <ImageView
                android:id="@+id/imgSpeakerFoto"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/altoFoto"
                android:src="@mipmap/ic_launcher"

                />
            <TextView
                android:id="@+id/lblDetailNombreSpeaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Speaker"
                android:textStyle="bold"
                android:lines="1"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/lblDetailTituloSpeaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titulo"
                android:lines="1"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/lblDetailTrabajoSpeaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trabajo"
                android:lines="1"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:textColor="@color/colorPrimary"
                />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_icons_twitter"
                />



            <TextView
                android:id="@+id/lblDetailDescSpeaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="blablabla"
                android:gravity="center_horizontal"
                android:textSize="15sp"
                android:layout_margin="5dp"
                android:textColor="@color/colorPrimary"
                />



        </LinearLayout>


    </androidx.cardview.widget.CardView>

</FrameLayout>