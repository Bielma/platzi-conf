<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.HoneFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="@dimen/radioCard"
               app:cardElevation="0dp"
               android:layout_margin="15dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <androidx.appcompat.widget.AppCompatImageView
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/altoFoto"
                       android:src="@drawable/banner_platzi_conf" />

                   <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"/>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/inicio_frag_tv_que_es"
                       android:textStyle="bold"
                       android:textSize="@dimen/tamañoTitulo"
                       android:textColor="@color/colorPrimaryDark"
                       android:layout_marginRight="@dimen/margenHomeSub"
                       android:layout_marginLeft="@dimen/margenHomeSub"
                       android:layout_marginTop="@dimen/margenHomeSub"
                       />
                   <View
                       android:layout_marginTop="@dimen/margenHomeSub"
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:background="@color/colorPrimary"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/inicio_frag_tv_que_es_resp"
                       android:textSize="@dimen/tamañoSubTitulo"
                       android:textColor="@color/colorPrimary"
                       android:layout_marginRight="@dimen/margenHomeSub"
                       android:layout_marginLeft="@dimen/margenHomeSub"
                       android:layout_marginTop="@dimen/margenHomeSub"
                       />
                   <ImageView
                       android:layout_marginTop="10dp"
                       android:layout_width="wrap_content"
                       android:layout_height="@dimen/altoFoto"
                       android:src="@drawable/platzi_conf_2"/>
                   <View
                       android:layout_marginTop="@dimen/margenHomeSub"
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:background="@color/colorPrimary"/>
               </LinearLayout>
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="@dimen/radioCard"
               app:cardElevation="0dp"
               android:layout_margin="15dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/inicio_frag_tv_por_que"
                   android:textColor="@color/colorPrimaryDark"
                   android:textStyle="bold"
                   android:textSize="@dimen/tamañoTitulo"
                   android:layout_marginRight="@dimen/margenHomeSub"
                   android:layout_marginLeft="@dimen/margenHomeSub"
                   android:layout_marginTop="@dimen/margenHomeSub"
                   />
                   <View
                       android:layout_marginTop="@dimen/margenHomeSub"
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:background="@color/colorPrimary"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/inicio_frag_tv_por_que_resp"
                   android:textColor="@color/colorPrimary"
                   android:textSize="@dimen/tamañoSubTitulo"
                   android:layout_marginRight="@dimen/margenHomeSub"
                   android:layout_marginLeft="@dimen/margenHomeSub"
                   android:layout_marginTop="@dimen/margenHomeSub"
                   />

                   <ImageView
                       android:layout_marginTop="10dp"
                       android:layout_width="wrap_content"
                       android:layout_height="@dimen/altoFoto"
                       android:src="@drawable/platzi_conf_3"/>
                   <View
                       android:layout_marginTop="@dimen/margenHomeSub"
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:background="@color/colorPrimary"/>
               </LinearLayout>
           </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                android:layout_margin="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/inicio_frag_tv_info"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:textSize="@dimen/tamañoTitulo"
                        android:layout_marginRight="@dimen/margenHomeSub"
                        android:layout_marginLeft="@dimen/margenHomeSub"
                        android:layout_marginTop="@dimen/margenHomeSub"
                        />
                    <View
                        android:layout_marginTop="@dimen/margenHomeSub"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"/>
                    <TextView
                        android:layout_marginRight="@dimen/margenHomeSub"
                        android:layout_marginLeft="@dimen/margenHomeSub"
                        android:layout_marginTop="@dimen/margenHomeSub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/inicio_frag_tv_info_resp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/tamañoSubTitulo"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

</FrameLayout>